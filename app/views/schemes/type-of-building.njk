{% extends "layouts/question.njk" %}

{% set title = "What type of building is the property?" %}
{% if scheme["type-of-building"] %}
  {# Editing an existing scheme #}
  {% set caption = scheme.name %}
  {% set buttonText = "Save changes" %}
  {% set formAction = schemePath %}
{% endif %}

{% block question %}
  {{ govukRadios(decorate({
    fieldset: {
      legend: {
        text: macro.heading(title, caption)
      }
    },
    items: data.questions["type-of-building"]
  }, ["schemes", scheme.id, "type-of-building"])) }}
{% endblock %}
