{% extends "layouts/form.njk" %}

{% set title = "Sign in to your account to submit CORE data" %}

{% block form %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ govukNotificationBanner({
        text: "Your password has been reset. Sign in with your new password to continue.",
        type: "success"
      }) if query.success == "password-reset" }}

      {{ macro.heading(title) }}

      {{ govukInput({
        decorate: ["account", "email"],
        label: {
          text: "Email address"
        },
        autocomplete: "email",
        spellcheck: false
      }) }}

      {{ govukInput({
        label: {
          text: "Password"
        },
        type: "password",
        autocomplete: "current-password",
        spellcheck: false
      }) }}

      {{ govukButton({
        text: "Sign in"
      }) }}

      <p>You can <a href="/account/request-password-reset">reset your password</a> if youâ€™ve forgotten it.</p>
    </div>
  </div>
{% endblock %}
