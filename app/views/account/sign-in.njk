{% extends "form.njk" %}

{% set title = "Sign in" %}
{% set formAction = "/logs" %}

{% block form %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ title }}</h1>

      {{ govukInput(decorate({
        classes: "govuk-!-width-two-thirds",
        label: {
          classes: "govuk-label--m",
          text: "Email address"
        },
        id: "email",
        name: "email",
        autocomplete: "email",
        spellcheck: false
      }, ["account", "email"])) }}

      {{ govukInput({
        classes: "govuk-!-width-two-thirds",
        label: {
          classes: "govuk-label--m",
          text: "Password"
        },
        type: "password",
        spellcheck: false
      }) }}

      {{ govukButton({
        text: "Sign in"
      }) }}
    </div>
  </div>
{% endblock %}
