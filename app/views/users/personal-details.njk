{% extends "layouts/form.njk" %}

{% if user.name and user.email %}
  {# Editing an existing user #}
  {% set caption = user.name %}
  {% set title = "Personal details" %}
  {% set buttonText = "Save changes" %}
  {% set backLink = userPath %}
  {% set formAction = userPath %}
{% else %}
  {# Inviting a new user #}
  {% set caption = false %}
  {% set title = "Invite a user to submit CORE data" %}
  {% set buttonText = "Continue" %}
  {% set backLink = "/users" if activeSection == "users" else organisationPath %}
  {% set formAction = userPath + "/organisation" %}
{% endif %}

{% block form %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ macro.heading(title, caption) }}

      {{ govukInput(decorate({
        label: {
          text: "Name"
        },
        spellcheck: false
      }, ["users", user.id, "name"])) }}

      {{ govukInput(decorate({
        label: {
          text: "Email address"
        },
        spellcheck: false
      }, ["users", user.id, "email"])) }}

      {% if not user.invitedById %}
        {{ govukInput(decorate({
          type: "hidden",
          value: data.account.name
        }, ["users", user.id, "invitedById"])) }}
      {% endif %}

      {{ govukButton({
        text: buttonText
      }) }}
    </div>
  </div>
{% endblock %}
