{% extends "layouts/check-answers.njk" %}

{% block checkAnswers %}
  {{ govukSummaryList({
    rows: [{
      key: {
        text: "Tenacy start date"
      },
      value: {
        text: log[section.id]["start-date"] | textFromInputValue
      },
      actions: {
        items: [{
          href: sectionPath + "/start-date?referrer=" + referrer,
          text: "Change",
          visuallyHiddenText: "tenacy start date"
        }]
      }
    }, {
      key: {
        text: "Starter tenancy"
      },
      value: {
        text: log[section.id]["is-starter"] | textFromInputValue(data.questions["yes-no"])
      },
      actions: {
        items: [{
          href: sectionPath + "/is-starter?referrer=" + referrer,
          text: "Change",
          visuallyHiddenText: "if starter tenancy"
        }]
      }
    }, {
      key: {
        text: "Tenancy type"
      },
      value: {
        text: log[section.id]["type-of-tenancy"] | textFromInputValue(data.questions["type-of-tenancy"])
      },
      actions: {
        items: [{
          href: sectionPath + "/type-of-tenancy?referrer=" + referrer,
          text: "Change",
          visuallyHiddenText: "type-of-tenancy"
        }]
      }
    }]
  }) }}
{% endblock %}
