{% extends "layouts/question.njk" %}

{% set title = "Do you know the postcode of the household’s last settled home?" %}

{% block question %}
  {{ govukRadios({
    decorate: ["logs", log.id, section.id, "postcode-known"],
    fieldset: {
      legend: {
        text: macro.heading(title, caption)
      }
    },
    hint: {
      text: "This is also known as the household’s ‘last settled accommodation’."
    },
    items: [{
      value: "true",
      text: "Yes",
      conditional: {
        html: govukInput({
          decorate: ["logs", log.id, section.id, "postcode"],
          label: {
            text: "Postcode"
          },
          classes: "govuk-input--width-5"
        })
      }
    }, {
      value: "false",
      text: "No"
    }]
  }) }}
{% endblock %}
