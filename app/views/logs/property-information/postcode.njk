{% extends "layouts/question.njk" %}

{% set title = "Do you know the propertyâ€™s postcode?" %}

{% block question %}
  {% set postcodeHtml %}
    {{ govukInput({
      decorate: ["logs", log.id, section.id, "postcode"],
      label: {
        text: "Postcode"
      },
      classes: "govuk-input--width-5"
    }) }}
  {% endset %}

  {{ govukRadios({
    decorate: ["logs", log.id, section.id, "postcode-known"],
    fieldset: {
      legend: {
        text: macro.heading(title, caption)
      }
    },
    items: [{
      value: "true",
      text: "Yes",
      conditional: {
        html: postcodeHtml
      }
    }, {
      value: "false",
      text: "No"
    }]
  }) }}
{% endblock %}
