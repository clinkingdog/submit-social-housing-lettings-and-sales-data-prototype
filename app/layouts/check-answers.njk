{% extends "layouts/form.njk" %}

{% set title = title or "Check your answers" %}
{% set formAction = logPath %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      href: "/logs",
      text: "Case logs"
    }, {
      href: "/logs/" + log.id,
      text: "Log " + log.id
    }, {
      text: caption
    }]
  }) }}
{% endblock %}

{% block form %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters-from-desktop">
      {{ macro.heading(title) }}

      {% block checkAnswers %}
      {% endblock %}

      {# Mark section as complete if checking the answers for a log section #}
      {{ govukInput(decorate({
        value: "true",
        type: "hidden"
      }, ["logs", log.id, section.id, "completed"])) if log }}

      {{ govukButton({
        text: "Return to log"
      }) }}

      {{ govukButton({
        classes: "govuk-button--secondary",
        text: "Go to next incomplete section",
        href: logPath + "/" + nextSection(log.id).id
      }) }}
    </div>
  </div>
{% endblock %}
