<div {%- if params.id %} id="{{ params.id }}"{% endif %} class="app-summary-message {%- if params.classes %} {{ params.classes }}{% endif %}"
{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {% if params.titleHtml or params.titleText %}
    <h3 class="app-summary-message__title">{{ params.titleHtml | safe if params.titleHtml else params.titleText }}</h3>
  {% endif %}
  <p>{{ params.html | safe if params.html else params.text }}</p>
</div>
